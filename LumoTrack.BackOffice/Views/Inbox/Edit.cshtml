@model LumoTrack.DTO.InboxDTO

@{
    ViewBag.Title = "Edit";
}

<h2>Responder mensaje</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.Label("Camión", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-sm-10">
                @Html.LabelForModel(Model.TruckName, new { @class = "control-label", @style = "padding:9px;" })
                @Html.ValidationMessageFor(model => model.TruckName, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(x => x.TruckId)

        <div class="form-group">
            @Html.Label("Mensaje", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-sm-10">
                @Html.LabelForModel(Model.Message, new { @class = "control-label", @style = "padding:9px" })
                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Respuestas", htmlAttributes: new { @class = "control-label col-md-2 " })
            <div class="col-sm-10">
                @Html.TextAreaFor(m => m.Response, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Response, "Campo requerido", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(x => x.ResponseDate)

        @Html.HiddenFor(x => x.UserId)

        @Html.HiddenFor(x => x.UserResponseId)

        @Html.HiddenFor(x => x.CreationDate)

        @Html.HiddenFor(x => x.TruckName)

        @Html.HiddenFor(x => x.Message)

        @Html.HiddenFor(x => x.ResponseDate, new { @id = "hckDate" })

        <div class="form-group">
            <div class="control-label" style="text-align:right">
                <input type="button" id="cancelBtn" value="Cancelar" class="btn btn-cancel" style="margin: 0 1px; width:85px" />
                <input type="submit" value="Enviar respuesta" class="btn btn-login" style="margin: 0 0 0 10px;" />
            </div>
        </div>

    </div>
}

@section Scripts {
    <script type="text/javascript">
        $('#cancelBtn').click(function () {
            document.location = '@Url.Action("Index","Inbox")';

    });
        $(document).ready(function () {

            var e = document.getElementById('hckDate');

            e.value = new Date();
        });

    </script>
}
