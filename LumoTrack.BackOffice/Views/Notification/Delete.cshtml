@model LumoTrack.DTO.NotificationDTO

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar aviso</h2>
<div id="myModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
        <div class="modal-header">
            <span class="close">&times;</span>
            <h3>Eliminar notificación</h3>
        </div>
        <div class="modal-body">
            <p>¿Seguro que desea eliminar esta notificación?</p>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <input id="deleteform" style="visibility: hidden;display:none" type="submit" value="Eliminar" class="btn btn-danger" />
            }
            <div class="modal-footer">
                <div class="control-label col-md-12 right">
                    <input id="cancelBtn" type="submit" value="Cancelar" class="btn btn-cancel" />
                    <input id="deleteBtn" type="submit" value="Eliminar" class="btn btn-login" />
                </div>
            </div>
        </div>
    </div>

</div>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Titulo")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayName("Importante")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Important)
        </dd>

        <dt>
            @Html.DisplayName("Mensaje")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Message)
        </dd>

        <dt>
            @Html.DisplayName("Fecha de notificación")
        </dt>

        <dd>
            @Model.NotificationDate.Date.ToShortDateString()
        </dd>

        <dt>
            @Html.DisplayName("Fecha de vencimiento")
        </dt>

        <dd>
            @Model.ExpiryDate.Date.ToShortDateString()
        </dd>

    </dl>


    <div class="form-actions col-md-12 right no-color">
        <input id="cancelBtn_1" type="button" value="Cancelar" class="btn btn-cancel" />
        <input type="submit" id="myBtn" value="Eliminar" class="btn btn-login" />
    </div>

</div>

@section Scripts {

    <script type="text/javascript">
        // Get the modal
        var modal = document.getElementById('myModal');

        // Get the button that opens the modal
        var btn = document.getElementById("myBtn");

        var cancelbtn = document.getElementById("cancelBtn");

        var deletebtn = document.getElementById("deleteBtn");

        // Get the <span> element that closes the modal
        var span = document.getElementsByClassName("close")[0];

        // When the user clicks the button, open the modal
        btn.onclick = function () {
            modal.style.display = "block";
        }

        cancelbtn.onclick = function () {
            modal.style.display = "none";
        }
        deletebtn.onclick = function () {
            document.getElementById("deleteform").click();
        }

        // When the user clicks on <span> (x), close the modal
        span.onclick = function () {
            modal.style.display = "none";
        }

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
        $('#cancelBtn_1').click(function () {
        document.location = '@Url.Action("Index","Notification")';
    });
    </script>
}
