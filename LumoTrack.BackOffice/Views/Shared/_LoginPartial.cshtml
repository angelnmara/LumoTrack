@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a></li>
        </ul>
    }
}
else
{
    if (ViewBag.Title != "Log in")
    {
        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("Iniciar sesión", "Login", "User", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        </ul>
    }

}
